<html>
  <head>

    <style>
      .hide-column {
        display: none;
      }
    </style>

  </head>

  <body>

    <div>
      <div>
        <h1>
          List of all activities
        </h1>
      </div>
    </div>

    <hr>

    <div>
      <div>
        <h2>
          Add a new activity
        </h2>

        <form action="/insert_activity" method="post">
          <div>
            <label for="activity_name_box">
              Activity name
            </label>

            <input type="text" id="activity_name_box" name="query_activity_name">
          </div>

          <div>
            <label for="activity_description_box">
              Activity description
            </label>

            <textarea id="activity_description_box" name="query_activity_description" rows="3"></textarea>
          </div>

          <div>
            <label for="location_box">
              Location
            </label>

            <input type="text" id="location_box" name="query_location">
          </div>

          <div>
            <label for="trip_id_box">
              Trip
            </label>

            <input type="text" id="trip_id_box" name="query_trip_id">
          </div>

          <button>
            Create activity
          </button>
        </form>
      </div>
    </div>

    <hr>
    <div>
      <div>
        <table class="table table-hover">
          <tr>
            <th class="hide-column">
              ID
            </th>

            <th>
              Activity name
            </th>

            <th>
              Activity description
            </th>

            <th>
              Location
            </th>

            <th>
              Trip #
            </th>

            <th>
              Created at
            </th>

            <th>
              Updated at
            </th>

            <th>
            </th>
          </tr>

          <% @list_of_activities.each do |an_activity| %>
            <tr>
              <td class="hide-column">
                <%= an_activity.id %>
              </td>

              <td>
                <%= an_activity.activity_name %>
              </td>

              <td>
                <%= an_activity.activity_description %>
              </td>

              <td>
                <%= an_activity.location %>
              </td>

              <td>
                <%= an_activity.trip_id %>
              </td>

              <td>
                <%= time_ago_in_words(an_activity.created_at) %> ago
              </td>
              <td>
                <%= time_ago_in_words(an_activity.updated_at) %> ago
              </td>

              <td>
                <a href="/activities/<%= an_activity.id %>">
                  Show details
                </a>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>

    <hr>
  </body>
</html>
